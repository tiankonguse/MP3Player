<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	
    <item android:id="@android:id/background">
        
        <shape >
            <corners android:radius="2dip"/>
            <gradient 
                android:angle="270"
                android:centerColor="#58EBEBEB"
                android:centerY="0.45"
                android:endColor="#58EBEBEB"
                android:startColor="#58EBEBEB"
                />
            
        </shape>
        
    </item>
    
    <item android:id="@android:id/progress">
        
        <clip>
            
            <shape>
                
                <corners android:radius="2dip"/>
                <gradient 
                    android:angle="270"
                    android:startColor="#89EEEE00"
                    android:centerColor="#89EEEE00"
                    android:endColor="#89EEEE00"
                    android:centerY="0.45"
                    
                    />
                
            </shape>
            
        </clip>
        
    </item>
    
</layer-list>