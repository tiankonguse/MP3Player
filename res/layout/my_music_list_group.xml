<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="@color/my_list_group_layout_color"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    >
    
    <ImageButton 
        android:id="@+id/my_list_group_delet"
        android:src="@drawable/my_delete_select"   
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/my_list_group_delete_color"
        android:contentDescription="@string/app_name"  
         />
     <ImageButton 
        android:id="@+id/my_list_group_play"
        android:src="@drawable/my_play_select" 
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/my_list_group_delet"
        android:background="@color/my_list_group_play_color"
        android:contentDescription="@string/app_name"    
         />
    
    <TextView 
        android:id="@+id/my_music_list_group_name"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_toLeftOf="@id/my_list_group_play"
        android:background="@color/my_list_group_name_bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="50dp"
        android:textColor="@color/my_list_group_name_text_color"
        android:textSize="30sp"
        />
    
</RelativeLayout>