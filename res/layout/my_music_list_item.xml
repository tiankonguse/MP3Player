<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="@color/my_list_item_layout_color"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" 
    >
    
    <ImageButton 
        android:id="@+id/my_list_item_delete"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/my_list_item_delete_color"
        android:contentDescription="@string/app_name"
        android:paddingRight="8dp"
        android:paddingLeft="5dp"
        android:src="@drawable/my_item_delete_select"
        />
    
    <TextView 
        android:id="@+id/my_list_item_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/my_list_item_delete"
        android:background="@color/my_list_item_name_bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="@color/my_list_item_name_text_color"
        android:textSize="16sp"
        />
    
</RelativeLayout>